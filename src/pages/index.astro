---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/inter";
import Pill from "../components/Pill.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="max-w-3xl mx-auto mt-20">
      <!-- title -->

      <div class="flex gap-6">
        <img
          src="/profile.jpg"
          alt="Arseniy Shishaev"
          class="w-28 h-28 rounded-full object-cover object-top"
        />
        <div class="flex flex-col gap-3">
          <div class="flex flex-col gap-0.5">
            <h1 class="text-xl font-bold text-zinc-900">Arseniy Shishaev</h1>
            <!-- subtitle -->
            <h2 class="text-lg font-light text-zinc-600">
              Entrepreneur, software engineer
            </h2>
          </div>
          <div class="flex gap-2">
            <Pill href="https://github.com/arseniy-shishaev" text="GitHub" />
            <Pill
              href="https://linkedin.com/in/arseniy-shishaev"
              text="LinkedIn"
            />
            <Pill href="mailto:arseniy@shishaev.com" text="Email" />
          </div>
        </div>
      </div>

      <!-- contact links -->
      
    </div>
  </body>
</html>
